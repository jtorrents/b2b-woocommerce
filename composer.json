{
    "name": "b2brouter/woocommerce-plugin",
    "description": "B2Brouter for WooCommerce - Generate and send electronic invoices from WooCommerce orders",
    "type": "wordpress-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "B2Brouter",
            "email": "devs@b2brouter.net"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/jtorrents/b2b-php"
        }
    ],
    "suggest": {
        "jtorrents/b2b-php": "Required for B2Brouter API integration (^1.0)"
    },
    "autoload": {
        "psr-4": {
            "B2Brouter\\WooCommerce\\": "includes/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "scripts": {
        "post-install-cmd": [
            "@php -r \"echo 'B2Brouter PHP SDK installed successfully.\\n';\""
        ],
        "post-update-cmd": [
            "@php -r \"echo 'B2Brouter PHP SDK updated successfully.\\n';\""
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
